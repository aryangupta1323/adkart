<%- include('./elements/header.ejs') %> 
<link rel="stylesheet" href="styles/profile.css">
</head>
<body onload="lp()">
    <%- include('./elements/nav.ejs',{pageTitle:pageTitle,errorMsg:errorMsg}) %> 
    <div class="profile-container">
    <h1>Your Profile</h1>
    <form action="/profile" method="post" enctype="multipart/form-data">
    <div class="image-container">
    <img class='profile-image'  src="/profile-images/<%= user.imgPath?user.imgPath.split('\\')[7]:'image.png' %>"  alt="">
    </div>
    <button type="button" onclick="document.querySelector('.profile-container input').click()"><i class='bx bxs-edit'></i></button>
    <input type="file" name='pimage' hidden onchange="form.submit()" >
    
    </form>
    <span><b>First Name:</b> <%= user.firstName %> </span>
    <span><b>Last Name:</b> <%= user.lastName %></span>
    <span><b>Contact:</b> <%= user.contact %></span>
    <span><b>Email: </b> <%= user.email %></span>
    <span><b>Properties Added</b></span>
    <ul>
     <%   properties.forEach(property=>{ %>
            <li class="profile-property"><%= property.address %></li>
     <%   }) %>
    </ul>
</div>
<%- include('./elements/footer.ejs') %> 