                <div class="eMsg" >
                    <%= errorMsg[0] %> 
                </div>
                <% } %> 
             <form action="/update-password" method="POST">
                <div class="password">
                   <input type="password" name="password"  required="true" placeholder="New Password">
                </div>
        <input type="hidden" value="<%= userId %>" name="userId">
