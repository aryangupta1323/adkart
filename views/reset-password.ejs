<%- include('./elements/header.ejs') %>
<link rel="stylesheet" href="/styles/form.css">
</head>
<body onload="lp()"> 
    <%- include('./elements/nav.ejs',{pageTitle:pageTitle,errorMsg:errorMsg}) %> 
        <div class="form1">
            <div class="left">
              <a href="" class="form-logo"><i class='bx bx-home'></i>Adkart</a>
            </div>
            <div class="details">
             <h1>Reset Password</h1>
             <% if(errorMsg.length>0){%> 
                <div class="eMsg">
                  <%= errorMsg[0] %> 
                </div>
                <% } %> 
             <% if(successMsg.length>0){%> 
                <div class="sMsg" >
                  <%= successMsg[0] %> 
                </div>
                <% } %>
             <form action="/reset-password" method="POST">
                <div class="email">
                    <input type="email" name="email" required="true" placeholder="Registered Email">
                </div>
                <button type="submit" class="submitBtn">Submit</button>
            </form>
            </div>
          </div>
    <%- include('./elements/footer.ejs') %> 